{
    "extends": [
      "config:base"
    ],
    "separateMinorPatch": true,
    "separateMajorMinor": true,
    "separateMultipleMajor": true,
    "regexManagers": [
      {
        "fileMatch": ["^.*/?Dockerfile$"],
        "matchStrings": ["^FROM ubuntu:(?<majorVersion>[a-zA-Z]+)-(?<build>\\d+)"]
      }
    ],
    "packageRules": [
      {
        "datasources": ["docker"],
        "packageNames": ["ubuntu"],
        "allowedVersions": "/^{{majorVersion}}-/"
      }
    ]
  }
  